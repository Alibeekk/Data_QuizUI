<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_weight="1"
    android:background="@drawable/layout_back"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:background="@drawable/layout_back"
        android:layout_height="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="Data Quiz"
                android:fontFamily="@font/quint_Vinolia"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/gradient_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/gradient_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="510dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/gradient_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="600dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/gradient_circle" />
        </LinearLayout>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/back_layout1"
                android:elevation="20dp"
                android:gravity="center"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="To'g'ri: 10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="40dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Noto'g'ri: 2"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="40dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="100dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:elevation="20dp"
            android:gravity="center"
            android:background="@drawable/back_button1"
            android:layout_height="200dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="Savollar: 12/20"
                android:textColor="#03CAFE"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="35dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_marginTop="110dp"
            android:layout_height="90dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="12/20"
                android:textSize="23sp"
                android:textColor="#03CAFE"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingTop="120dp"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="300dp"
                    android:gravity="center"
                    android:layout_height="500dp">

                    <RadioButton
                        android:layout_width="250dp"
                        android:text="javob - 1"
                        android:textSize="16sp"
                        android:elevation="10dp"
                        android:background="@drawable/back_ratiobutton"
                        android:layout_marginTop="130dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_height="50dp"/>
                    <RadioButton
                        android:layout_width="250dp"
                        android:text="javob - 2"
                        android:textSize="16sp"
                        android:background="@drawable/back_ratiobutton"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:elevation="10dp"
                        android:layout_height="50dp"/>
                    <RadioButton
                        android:layout_width="250dp"
                        android:text="javob - 3"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:elevation="10dp"
                        android:background="@drawable/back_ratiobutton"
                        android:layout_height="50dp"/>
                    <RadioButton
                        android:layout_width="250dp"
                        android:text="javob - 4"
                        android:textSize="16sp"
                        android:elevation="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:background="@drawable/back_ratiobutton"
                        android:layout_height="50dp"/>

                </RadioGroup>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="bottom|center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="300dp"
                        android:text="Next"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#03C7FA"
                        android:elevation="10dp"
                        app:backgroundTint="@null"
                        android:background="@drawable/button_stroke"
                        android:layout_height="50dp"/>

                </LinearLayout>

            </FrameLayout>


        </FrameLayout>

    </FrameLayout>

</FrameLayout>
